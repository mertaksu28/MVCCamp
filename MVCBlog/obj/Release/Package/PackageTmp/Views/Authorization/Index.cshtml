@using Entities.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class=" table table-hover">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail Adresi</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Durumunu Değiştir</th>
        <th>Yetkisini Değiştir</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.UserName</td>
            <td>@item.Role</td>
            <td>Aktif</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.Id" class="btn btn-danger">Durumunu Değiştir</a></td>
            <td><a href="/Authorization/EditAdmin/@item.Id" class="btn btn-warning">Yetkisini Değiştir</a></td>
        </tr>
    }
</table>
<br />
<a href="/Authorization/AddAdmin/" class="btn btn-outline-dark">Yeni Admin Tanımla</a>



