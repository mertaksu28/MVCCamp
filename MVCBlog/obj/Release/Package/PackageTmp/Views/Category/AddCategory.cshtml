@model Entities.Concrete.Category

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@* Html helper yöntemi *@
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(c => c.CategoryName)
    @Html.ValidationMessageFor(c => c.CategoryName)
    <br /> <br />
    @Html.Label("Açıklama Yazınız")
    @Html.TextBoxFor(c => c.Description)
    @Html.ValidationMessageFor(c => c.Description)
    <br /> <br />
    <button class="btn btn-group-sm">Kaydet</button>
</div>
}


