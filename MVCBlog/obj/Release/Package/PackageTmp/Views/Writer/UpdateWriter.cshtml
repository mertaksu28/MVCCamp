@model Entities.Concrete.Writer

@{
    ViewBag.Title = "UpdateWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yazar Düzenleme Sayfası</h2>

@using (Html.BeginForm("UpdateWriter", "Writer", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Yazar Adı")
    @Html.TextBoxFor(w => w.WriterId, new { @class = "form-ontrol" })
    <br />
    @Html.Label("Yazar Adı")
    @Html.TextBoxFor(w => w.WriterName, new { @class = "form-ontrol" })
    @Html.ValidationMessageFor(w => w.WriterName)
    <br />
    @Html.Label("Yazar SoyAdı")
    @Html.TextBoxFor(w => w.WriterSurName, new { @class = "form-ontrol" })
    @Html.ValidationMessageFor(w => w.WriterSurName)
    <br />
    @Html.Label("Yazar Ünvanı")
    @Html.TextBoxFor(w => w.WriterTitle, new { @class = "form-ontrol" })
    @Html.ValidationMessageFor(w => w.WriterTitle)
    <br />
    @Html.Label("Yazar Hakkında")
    @Html.TextBoxFor(w => w.WriterAbout, new { @class = "form-ontrol" })
    @Html.ValidationMessageFor(w => w.WriterAbout)
    <br />
    @Html.Label("Yazar Mail")
    @Html.TextBoxFor(w => w.WriterMail, new { @class = "form-ontrol" })
    @Html.ValidationMessageFor(w => w.WriterMail)
    <br />
    @Html.Label("Yazar Şifresi")
    @Html.TextBoxFor(w => w.WriterPassword, new { @class = "form-ontrol" })
    @Html.ValidationMessageFor(w => w.WriterPassword)
    <br />
    @Html.Label("Yazar Görsel Linki")
    @Html.TextBoxFor(w => w.WriterImage, new { @class = "form-ontrol" })
    @Html.ValidationMessageFor(w => w.WriterImage)
    <br />
    <button class="btn accent-green">Profili Düzenle</button>
</div>
}
