@model Entities.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@* Html helper yöntemi *@
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.CategoryName)
    <br /> <br />
    @Html.Label("Açıklama Yazınız")
    @Html.TextAreaFor(c => c.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Description)
    <br /> <br />
    <button class="btn btn-group-sm">Kaydet</button>
</div>
}